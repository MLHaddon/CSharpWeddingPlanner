@model User
<div class="container">
  <div class="d-flex flex-column justify-content-end">
    <form action="/register" method="post">
      <h1>Register With This Website</h1>
      <div class="form-group">
        <label asp-for="FirstName" class="d-flex justify-self-end"></label>
        <span  class="text-danger" asp-validation-for="FirstName"></span>
        <input type="text" asp-for="FirstName" class="form-control d-flex justify-self-end">
      </div>
      <div class="form-group">
        <label asp-for="LastName" class="d-flex justify-self-end"></label>
        <span  class="text-danger" asp-validation-for="LastName"></span>
        <input type="text" asp-for="LastName" class="form-control d-flex justify-self-end">
      </div>
      <div class="form-group">
        <label asp-for="Email" class="d-flex justify-self-end"></label>
        <span  class="text-danger" asp-validation-for="Email"></span>
        <input type="email" asp-for="Email" class="form-control d-flex justify-self-end">
      </div>
      <div class="form-group">
        <label asp-for="Password" class="d-flex justify-self-end"></label>
        <span  class="text-danger" asp-validation-for="Password"></span>
        <input type="password" asp-for="Password" class="form-control d-flex justify-self-end">
      </div>
      <div class="form-group">
        <label asp-for="ConfirmPassword" class="d-flex justify-self-end"></label>
        <span  class="text-danger" asp-validation-for="ConfirmPassword"></span>
        <input type="password" asp-for="ConfirmPassword" class="form-control d-flex justify-self-end">
      </div>
      <input type="submit" value="register" class="btn-warning btn-dark">
    </form>
  </div>
</div>
